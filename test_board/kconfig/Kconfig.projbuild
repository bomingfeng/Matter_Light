menu "Demo"

    choice
      prompt "Rendezvous Mode"
      default RENDEZVOUS_MODE_WIFI
      help
          Specifies the Rendezvous mode of the peripheral.

      config RENDEZVOUS_MODE_WIFI
          bool "Wi-Fi"
      config RENDEZVOUS_MODE_BLE
          bool "BLE"
      config RENDEZVOUS_MODE_THREAD
          bool "Thread"
      config RENDEZVOUS_MODE_ETHERNET
          bool "Ethernet"
    endchoice

    config RENDEZVOUS_MODE
       int
       range 0 8
       default 1 if RENDEZVOUS_MODE_WIFI
       default 2 if RENDEZVOUS_MODE_BLE
       default 4 if RENDEZVOUS_MODE_THREAD
       default 8 if RENDEZVOUS_MODE_ETHERNET

    config LED_Lights_GPIO
	int "LED_Lights_GPIO"
	range 0 19
	default 18
	help
		19

    config Lights_GPIO
	int "Lights_GPIO"
	range 0 18
	default 3
	help
		?

    config Lights_Control_Mode
	int "Lights Control Mode"
	range 0 1
	default 0
	help
            Lights Control Mode 1:GPIO. 0:PWM
		
    config detectIR_GPIO 
	int "detectIR_GPIO"
	range 0 20
	default 19
	help
		?
    
    config BUTTON_GPIO_PIN
	int "BUTTON_GPIO_PIN"
	range 0 20
	default 9
	help
		?

    config Battery_Level_GPIO_PIN
	int "Battery Level GPIO PIN"
	range 0 20
	default 1
	help
		?
		
    config Board_Type
	int "Board Type"
	range 0 3
	default 2
	help
            1:entrance_guard;2:detectIR;
            		
    config Entrance_Guard_GPIO
	int "Entrance Guard GPIO"
	range 0 20
	default 5
	help
		input
		
    config RF433_Enable_GPIO
	int "RF433 Enable GPIO"
	range 0 20
	default 4
	help
		output

    config RF433_Encoded_One_GPIO
	int "RF433 Encoded One GPIO"
	range 0 20
	default 0
	help
		output

    config RF433_Encoded_Two_GPIO
	int "RF433 Encoded Two GPIO"
	range 0 20
	default 1
	help
		output

    config RF433_Encoded_Three_GPIO
	int "RF433 Encoded Three GPIO"
	range 0 20
	default 2
	help
		output

    config RF433_Encoded_Four_GPIO
	int "RF433 Encoded Four GPIO"
	range 0 20
	default 3
	help
		output
							
    config STATION_SSID
        string "Station SSID"
        default "fengboming"
        help
            SSID (network name) for the example to connect to.

    config STATION_PASSPHRASE
        string "Station Passphrase"
        default "bomingfeng1"
        help
            WiFi password (WPA or WPA2) for the example to use.
            Can be left blank if the network has no security set.
            
    config AP_SSID
        string "AP SSID"
        default "Automatic_watering"
        help
            AP SSID (network name) for the ESP32 to act as a AP

    config AP_PASSPHARSE
        string "AP Passphrase"
        default "12345678"
        help
            AP password (WPA or WPA2) to use.
            Can be left blank if the network has no security set.

endmenu
